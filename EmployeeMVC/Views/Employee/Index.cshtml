@using System.Data
@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
    var tasks = (DataTable) ViewData["Tasks"];
}

<br /><br />
<div class="row">
    <h2>Employees List</h2>
</div>

<br /><br />
<div class="row">
    <a href="@Url.Action("Create","Employee")" class="btn btn-success btn-sm">Add Employee</a>
</div>

<br />
<div class="row">
  
    <table class="table table-bordered table-hover">
        <tr>
            <th>Name</th>
            <th>Position</th>
            <th>Office</th>
            <th>Salary</th>
            <th>Picture</th>
            <th></th>  
        </tr>

        @for (int i = 0; i < Model.Rows.Count; i++)
        {
            <tr valign="middle">
                <td>@Model.Rows[i][1]</td>
                <td>@Model.Rows[i][2]</td>
                <td>@Model.Rows[i][3]</td>
                <td>@Model.Rows[i][4]</td>
                <td>
                    <img src="@Url.Content(Model.Rows[i][5].ToString())" alt="Employee" width="50" height="50" />
                </td>
                <td>
                    <a class='btn btn-primary btn-sm' href="@Url.Action("Edit", "Employee", new {@id = Model.Rows[i][0]})">
                        <i class='fa fa-pencil'></i> Edit
                    </a>

                    <a class='btn btn-danger btn-sm' href="@Url.Action("Delete", "Employee", new {@id = Model.Rows[i][0]})" onclick="if (!Delete()) { return false; }">
                        <i class='fa fa-trash'></i> Delete
                    </a>
                    
                    <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal-@Model.Rows[i][0]">
                        <i class='fa fa-tasks'></i> Tasks
                    </button>
                    
                    <!-- The Modal -->
                    <div class="modal" id="myModal-@Model.Rows[i][0]">
                        <div class="modal-dialog">
                            <div class="modal-content">
      
                                <!-- Modal Header -->
                                <div class="modal-header">
                                    <h4 class="modal-title">@Model.Rows[i][1]</h4>
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                </div>
        
                                <!-- Modal body -->
                                <div class="modal-body">
                                    @foreach (DataRow task in tasks.Rows)
                                    {
                                        //Search for the Employee Id
                                        if (string.Equals(task["EmployeeId"].ToString(), Model.Rows[i][0].ToString()))
                                        {
                                            <p>@task["TaskDescription"]</p>
                                        }
                                    }
                                </div>
        
                                <!-- Modal footer -->
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                                </div>
        
                            </div>
                        </div>
                    </div>
                    

                </td>
            </tr>
                                        }
    </table>


</div>

@section scripts
{
    <script>
        function Delete() {
            return confirm('Are you sure to Delete this Employee?');
        }
    </script>
}

