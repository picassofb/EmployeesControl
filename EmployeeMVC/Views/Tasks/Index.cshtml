@model System.Data.DataTable

@{
    ViewBag.Title = "Index";
}


<br /><br />
<h2>Tasks</h2>

<p>
    @Html.ActionLink("Add Task", "Create",null, new{@class= "btn btn-success btn-sm" })
</p>
<table class="table table-bordered table-hover">
    <tr>
        <th>
            Employee
        </th>
        <th>
            Tasks
        </th>
        <th></th>
    </tr>

@for(int i = 0; i < Model.Rows.Count; i++) {
    <tr>
        <td>
            @Model.Rows[i][2]
        </td>
        <td>
            @Model.Rows[i][3]
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id= @Model.Rows[i][0] }, new{@class= "btn btn-info btn-sm" }) 
            @*@Html.ActionLink("Details", "Details", new { id= @Model.Rows[i][0] }) |
            @Html.ActionLink("Delete", "Delete", new { id= @Model.Rows[i][0] })*@
        </td>
    </tr>
}

</table>
